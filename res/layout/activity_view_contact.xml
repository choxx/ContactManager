<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/viewcontact"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context=".ViewContact" >

        <EditText
            android:id="@+id/etFname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@+id/ibEdit"
            android:ems="10"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etFname" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@+id/progressBar1"
            android:text="Mobile Number" />

        <EditText
            android:id="@+id/etHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:ems="10"
            android:textStyle="bold"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etHome"
            android:textStyle="bold"
            android:text="Office Number" />
        

        <EditText
            android:id="@+id/etOffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:textStyle="bold"
            android:ems="10"
            android:inputType="phone" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etOffice" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@+id/progressBar2"
            android:text="Postal Address" />

        <EditText
            android:id="@+id/etAddr"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@+id/textView3"
            android:ems="10"
            android:inputType="textPostalAddress" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAddr" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar3"
            android:text="Email Id" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@+id/textView4"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etEmail" />

        <TextView
            android:id="@+id/textView5"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar4"
            android:text="Organisation" />

        <EditText
            android:id="@+id/etOrg"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:ems="10" />

        <ProgressBar
            android:id="@+id/progressBar5"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etOrg" />

        <TextView
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar5"
            android:text="Note" />

        <EditText
            android:id="@+id/etNote"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:ems="10" />

        <ImageButton
            android:id="@+id/ibSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg"
            android:src="@android:drawable/ic_menu_save" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColorHighlight="@android:color/background_dark"
            android:layout_alignParentTop="true"
            android:text="Name:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageButton
            android:id="@+id/ibEdit"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            
            android:background="@drawable/bg"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/ibOffCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/progressBar2"
            android:layout_alignLeft="@+id/ibHomeCall"
            android:background="@drawable/bg"
            android:src="@android:drawable/stat_sys_phone_call" />

        <ImageButton
            android:id="@+id/ibDel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/textView1"
            android:layout_alignRight="@+id/progressBar1"
            android:background="@drawable/bg"
            android:src="@android:drawable/ic_delete" />

        <ImageButton
            android:id="@+id/ibHomeCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/textView2"
            android:layout_toLeftOf="@+id/ibEdit"
            android:background="@drawable/bg"
            android:src="@android:drawable/stat_sys_phone_call" />

    </RelativeLayout>

</ScrollView>